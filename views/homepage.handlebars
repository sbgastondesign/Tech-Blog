<div class="row row-cols-1 row-cols-md-2 g-4 blog">
  {{#each posts as |post| }}
  <div class="col">
    <div class="card mb-3 h-100">
      <div class="card-body">
        <h2 class="card-title">
          <a href="/post/{{post.id}}" class="post-title">{{post.title}}</a>
        </h2>
      </div>
      <div class="card-footer text-end">
        <p class="text-muted">Posted by: {{user.name}} on {{format_date post.date_created}}</p>
      </div>
    </div>
  </div>
  {{/each}}
</div>